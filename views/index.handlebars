<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{keyword}}">
          <div class=" input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <!--add button-->
  <div class="d-flex align-items-center">
    <a href="/create" style="margin-left: 7vw; font-size: 30px"><i class="fas fa-plus-circle mr-2"></i></a></i>
    <span style="font-size: 20px">增加新的餐廳到清單裡</span>
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="-">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="d-flex flex-row">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <a href="/edit/{{this.id}}" class="text-secondary">
                  <i class="fas fa-pen" style="margin-left: 11.5vw; margin-right:0.5vw"></i>
                </a>
                <form action="/restaurant/{{this.id}}" method="POST">
                  <button type="submit" class="delete">
                    <i type="submit" class="fas fa-trash-alt "></i>
                  </button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>