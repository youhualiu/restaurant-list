<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="d-flex flex-row" style="margin-left: 8vw; margin-bottom: 2vh">
  <!-- editing function -->
  <a href="/edit/{{restaurant._id}}" class="text-secondary">
    <i class="fas fa-pen" style="margin-left: 11.5vw; margin-right:0.5vw; font-size: 25px"></i>
  </a>
  <!-- deleting function-->
  <form action="/restaurant/{{restaurant._id}}" method="POST">
    <button type="submit" class="delete">
      <i type="submit" class="fas fa-trash-alt" style="font-size: 25px"></i>
    </button>
  </form>
</div>
<!-- restaurant information -->
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">

    </div>
  </div>
</div>